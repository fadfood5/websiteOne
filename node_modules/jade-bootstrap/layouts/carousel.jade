extends ../_bootstrap
append styles
	// Custom styles for this template
	link(href="../css/carousel.css", rel="stylesheet")
block body
	.navbar-wrapper
		.container
			nav.navbar.navbar-inverse.navbar-static-top
				.container
					.navbar-header
						button(type="button" ,class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar" ,aria-expanded="false", aria-controls="navbar")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar

						a(class="navbar-brand", href="#")
					#navbar.navbar-collapse.collapse
						ul.nav.navbar-nav
							li.active
								a(href="#") Me
							li
								a(href="#about") Projects
							li
								a(href="#contact") Contact
							li.dropdown
								a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
									| Dropdown
									span.caret
								ul.dropdown-menu(role='menu')
									li
										a(href='#') Action
									li
										a(href='#') Another action
									li
										a(href='#') Something else here
									li.divider
									li.dropdown-header Nav header
									li
										a(href='#') Separated link
									li
										a(href='#') One more separated link

	// Carousel
	// ==================================================
	+carousel("myCarousel",[{image:"../images/portfolio/5.jpg",h1:"FADI BITAR",p:"Student. Programmer. Philosopher.",button:{caption:"About Me",url:"#"}},{image:"../images/portfolio/4.jpg",h1:"Another example headline",p:"Whatsup",button:{caption:"Learn more",url:"#"}},	{image:"../images/portfolio/6.jpg",h1:"One more for good measure.",p:"Yes",button:{caption:"Browse gallery",url:"#"}}])
	// Wrap the rest of the page in another container to center all the content.
	.container.marketing
		// Three columns of text below the carousel
		.row
			.col-lg-4
				img.img-circle(src='../images/portfolio/1.jpg', alt='Image One', width='140', height='140')
				h2 Education
				p
					| Current student at the University of South Florida Majoring in Computer Science and Philosophy.
				p
					a.btn.btn-default(href='#', role='button') More
			.col-lg-4
				img.img-circle(src='../images/portfolio/2.jpg', alt='Image 2', width='140', height='140')
				h2 Programming
				p
					| Skilled in C, Java, HTML, CSS, Javascript, and Express.js.
				p
					a.btn.btn-default(href='#', role='button') More
			.col-lg-4
				img.img-circle(src='../images/portfolio/3.jpg', alt='Image 3', width='140', height='140')
				h2 Philosophy
				p
					a.btn.btn-default(href='#', role='button') More
		// START THE FEATURETTES
		hr.featurette-divider
		.row.featurette
			.col-md-7
				h2.featurette-heading
					| Back-end Web Development
				p.lead
					| Able to make simple yet powerful servers using the Express.js and Node.js frameworks and Firebase databases.
			.col-md-5
				img(src='../images/logos/express.png', alt='Feauturette Image 1')
				img(src='../images/logos/node.png', width = '200px', length = '200px' alt='Feauturette Image 1')
		hr.featurette-divider
		.row.featurette
			.col-md-7.col-md-push-5
				h2.featurette-heading
					| Programming Languages
				p.lead
					| Posses the coding skills to decipher and implement functions in C, Java, and Javascript.
			.col-md-5.col-md-pull-7
				img(src='../images/logos/c.png', width = '200px', length = '200px' alt='Feauturette Image 2')
				img(src='../images/logos/java.png', width = '200px', length = '200px' alt='Feauturette Image 2')
				img(src='../images/logos/js.png', width = '200px', length = '200px' alt='Feauturette Image 2')
		hr.featurette-divider
		
		footer
			p.pull-right
				a(href='#') Back to top
			p
				| © 2014 Company, Inc. ·
				a(href='#') Privacy
				|  ·
				a(href='#') Terms
